.total {
  width: 100%;
  height: 350rpx;
  background-color: #fff;
  border: 1px solid #fff;
  border-radius: 2%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 10rpx;
  padding: 0 20rpx;
}
.top {
  height: 50px;
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 25rpx;
  margin-left: 10rpx;
}
.avatarUrl {
  width: 30px;
  height: 30px;
}
.avatarImg {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.nameAndTime {
  margin-left: 20px;
}
.nickName {
  font-size: 32rpx;
}
.time {
  font-size: 26rpx;
  color: #7d7d7d;
}
.middle {
  flex: 1;
  line-height: 120rpx;
}
.bottom {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.comment, .share {
  line-height: 130rpx;
  display: flex;
  justify-content: space-around;
}
.commentImg, .shareImg {
  width: 30px;
  height: 30px;
  margin-top: 25rpx;
}
.commentText, .shareText {
  color: #7d7d7d;
  font-weight: bold;
  font-size: 32rpx;
  margin-top: -10rpx;
}

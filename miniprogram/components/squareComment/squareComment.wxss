.total {
  width: 100%;
  height: 100%;
  margin-top: 10px;
  background-color: #fff;
}
.title {
  width: 100%;
  height: 80rpx;
  color: #7d7d7d;
  padding-left: 20rpx;
  border-bottom: 1px solid #7d7d7d;
  line-height: 80rpx;
}
.item {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #9c9c9c;
  font-size: 30rpx;
}
.topBar {
  width: 100%;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
.image {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #7d7d7d;
  border-radius: 50%;
  margin-right: 20rpx;
}
.middle {
  width: 100%;
  height: 100rpx;
  padding: 20px;
  line-height: 100rpx;
}
.bottom {
  width: 100%;
  height: 20rpx;
  color: #7d7d7d;
  font-size: 24rpx;
  padding: 20rpx;
}
.total {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #fff;
}
.input {
  width: 15%;
  height: 80%;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.inputImg {
  width: 50rpx;
  height: 50rpx;
}
.search {
  display: flex;
  flex-direction: row;
  flex: 1;
  height: 100%;
  position: relative;
  margin-right: 20rpx;
}
.search input {
  height: 80%;
  width: 90%;
  margin-top: 10rpx;
  background-color: #f5f5f5;
  border-radius: 3%;
  padding-left: 70rpx;
  font-size: 30rpx;
}
.searchImg {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 30%;
  left: 3%;
}
.startSearch {
  width: 25%;
  height: 80%;
}
.startSearch button {
  width: 100%;
  height: 100%;
  margin-top: 10rpx;
  background-color: #1296db;
  border-radius: 3%;
  color: #fff;
}

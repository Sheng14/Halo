.total {
  width: 90%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  border: 1px solid #fff;
  border-radius: 3%;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 40rpx;
}
.item {
  width: 100%;
  height: 124rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #7d7d7d;
  color: #7d7d7d;
}
.item:nth-child(4) {
  border: none;
}
.left {
  width: 75%;
  height: 100%;
  display: flex;
  margin-left: 40rpx;
  align-items: center;
}
.img {
  width: 70rpx;
  height: 70rpx;
  margin-right: 30rpx;
}
.right {
  flex: 1;
  font-size: 50rpx;
  color: #7d7d7d;
}

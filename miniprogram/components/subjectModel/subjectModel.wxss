.total {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99;
  text-align: center;
  background: rgba(0, 0, 0, 0.6);  
}
.main {
  width: 80%;
  height: 75%;
  margin: 90rpx auto;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  letter-spacing: 2px;
  border: 1px solid #fff;
  border-radius: 4%;
}
.title {
  flex: 2;
  color: #707070;
  padding-top: 20rpx;
  font-size: 40rpx;
}
.control {
  height: 50px;
  text-align: center;
  line-height: 50px;
  background-color: #1296db;
  color: #fff;
}
.answer {
  flex: 6;
  color: #707070;
  padding-top: 20rpx;
  font-size: 40rpx;
}
.content {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 40rpx;
}
.footer {
  display: flex;
  height: 150rpx;
  width: 100%;
  line-height: 150rpx;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}
.publish {
  width: 30%;
  height: 50%;
  background-color: #1296db;
  line-height: 75rpx;
  text-align: center;
  border-radius: 5rpx;
  color: #fff;
}